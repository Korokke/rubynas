<!-- Actions -->
<fieldset>
  <legend>Actions</legend>
  <ul>
    <li><%= button_tag "Upload", { id: "upload-btn", onclick: "show_upload_form();" } %></li>
    <li id="upload-field" style="display: none;">
      <fieldset>
        <ul>
          <%= form_for :files, url: "#{request.fullpath}", method: "post", remote: true do |f| %>
            <li><%= f.file_field "file1", onchange: "" %></li>
            <li><%= f.submit "Upload", id: "upload-btn" %></li>
          <% end %>
          <li><%= button_tag "Close Form", { onclick: "hide_upload_form();" } %></li>
        </ul>
      </fieldset>
    </li>
    <li><%= button_tag "Archive" %></li>
    <li><%= button_tag "New Folder" %></li>
    <li><%= button_tag "Delete" %></li>
    <li><%= button_tag "Move" %></li>
    <li><%= button_tag "Copy" %></li>
    <li><%= button_tag "Rename" %></li>
  </ul>
</fieldset>
