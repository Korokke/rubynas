@show_unregister_form = ->
  $('#unregister-field').show()
  $('#unregister-open-btn').hide()
@hide_unregister_form = ->
  $('#unregister-field').hide()
  $('#unregister-open-btn').show()

@show_signup_form = ->
  $('#signup-field').show()
  $('#signup-open-btn').hide()
@hide_signup_form = ->
  $('#signup-field').hide()
  $('#signup-open-btn').show()
